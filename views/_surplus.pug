extends _layout

block content
    body.app
        .page
            .page-main
                include _sidebar
                
            .app-content
                .side-app
                    .page-header
                        div
                            h1.page-title Excedentes
                            ol.breadcrumb
                                li.breadcrumb-item
                                    a(href='/') Inicio
                                li.breadcrumb-item.active(aria-current='page') Excedentes

                    .row
                        .card
                            .card-header(data-toggle="collapse", role="button", href="#divBodySearchSurplus", aria-expanded="false", aria-controls="divBodySearchSurplus")
                                h3.card-title Opciones de Consulta
                            .card-body.p-4
                                #divBodySearchSurplus
                                    .row
                                        .col-lg-4.col-xl-6
                                            .card
                                                .card-header
                                                    .card-title Ver Excedentes por
                                                .card-body
                                                    .form-group.form-elements
                                                        .custom-controls-stacked
                                                            .row
                                                                .col-xl-4
                                                                    label.custom-control.custom-radio
                                                                        input.custom-control-input(type='radio' name='sp_op1' value='sp_opt_res' checked)
                                                                        span.custom-control-label Contrato
                                                                .col-xl-4
                                                                    label.custom-control.custom-radio
                                                                        input.custom-control-input(type='radio' name='sp_op1' value='sp_opt_doc')
                                                                        span.custom-control-label Documento
                                                                .col-xl-4
                                                                    label.custom-control.custom-radio
                                                                        input.custom-control-input(type='radio' name='sp_op1' value='sp_opt_abo')
                                                                        span.custom-control-label Abono a Documento
                                                            p
                                                            .row
                                                                .col-xl-4
                                                                    label.custom-control.custom-radio
                                                                        input.custom-control-input(type='radio', name='sp_op1', value='sp_opt_car')
                                                                        span.custom-control-label Cartola de Excedente

                                        .col-lg-8.col-xl-6
                                            .card
                                                .card-header
                                                    .card-title Fecha
                                                .card-body
                                                    .form-group.form-elements
                                                        .custom-controls-stacked
                                                            .row
                                                                .col-sm-12.col-md-12.col-lg-12.col-xl-12
                                                                    label.custom-control.custom-radio
                                                                        input.custom-control-input(type='radio' name='sp_op2' value='sp_opt_hoy' checked)
                                                                        span.custom-control-label Últimos 30 días
                                                            p
                                                            .row
                                                                .col-sm-12.col-md-12.col-lg-12.col-xl-4
                                                                    label.custom-control.custom-radio
                                                                        input.custom-control-input(type='radio' name='sp_op2' value='sp_opt_per')
                                                                        span.custom-control-label Periodo

                                                                .col-sm-12.col-md-12.col-lg-6.col-xl-4
                                                                    label(for='sp_date_ini') Desde
                                                                    .form-group
                                                                        .input-group.date(id='sp_date_ini')
                                                                            input#sp_date_ini_txt.form-control(type='text', placeholder='', readonly)
                                                                            span.input-group-addon
                                                                                span.fa.fa-calendar

                                                                .col-sm-12.col-md-12.col-lg-6.col-xl-4
                                                                    label(for='sp_date_end') Hasta
                                                                    .form-group
                                                                        .input-group.date(id='sp_date_end')
                                                                            input#sp_date_end_txt.form-control(type='text', placeholder='', readonly)
                                                                            span.input-group-addon
                                                                                span.fa.fa-calendar

                                    .row
                                        .col-md-6
                                        .col-md-6
                                            .row
                                                .col-lg-6
                                                    button.btn.btn-outline-warning.btn-block#btn-sp-clear(type="button") Limpiar
                                                .col-lg-6
                                                    button.btn.btn-outline-secondary.btn-block#btn-sp-search(type="button") Consultar

                                    p
                                    .row
                                        .col-md-12
                                            span.text-muted.text-right
                                                | Estado: favor seleccione preferencias de consulta.

                    .row#tblSpRes(style="display:none")
                        .card
                            .card-header
                                h3.card-title 
                                    a#btn_sp_bk_res(href='#')
                                        i.far.fa-arrow-alt-circle-left.fa-2x
                                    | &nbsp;&nbsp;Resumen
                            .card-body.p-4
                                table#tbl_sp_res(data-show-export="true")

                    .row#tblSpDet(style="display:none")
                        .card
                            .card-header
                                h3.card-title 
                                    a#btn_sp_bk_det(href='#')
                                        i.far.fa-arrow-alt-circle-left.fa-2x
                                    | &nbsp;&nbsp;Detalle
                            .card-body.p-4
                                table#tbl_sp_det(data-show-export="true")

                    .row#tblSpDoc(style="display:none")
                        .card
                            .card-header
                                h3.card-title 
                                    a#btn_sp_bk_doc(href='#')
                                        i.far.fa-arrow-alt-circle-left.fa-2x
                                    | &nbsp;&nbsp;Documentos
                            .card-body.p-4
                                table#tbl_sp_doc(data-show-export="true")

                    .row#tblSpAbo(style="display:none")
                        .card
                            .card-header
                                h3.card-title 
                                    a#btn_sp_bk_abo(href='#')
                                        i.far.fa-arrow-alt-circle-left.fa-2x
                                    | &nbsp;&nbsp;Abono
                            .card-body.p-4
                                table#tbl_sp_abo(data-show-export="true")

                    .row#tblSpCar(style="display:none")
                        .card
                            .card-header
                                h3.card-title 
                                    a#btn_sp_bk_car(href='#')
                                        i.far.fa-arrow-alt-circle-left.fa-2x
                                    | &nbsp;&nbsp;Cartola de Excedente
                            .card-body.p-4
                                table#tbl_sp_car(data-show-export="true")

            include _footer

    include _scripts

    script(src='/assets/js/app/surplus.js')
